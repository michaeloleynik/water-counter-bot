{
  "name": "water-counter-bot",
  "version": "1.0.0",
  "description": "Telegram бот для учета показаний счетчиков водных аппаратов",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:migrate:prod": "node dist/database/migrate.js",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "water",
    "counter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.16.3",
    "pg": "^8.11.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "date-fns": "^3.3.1",
    "uuid": "^9.0.1",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/pdfkit": "^0.13.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
